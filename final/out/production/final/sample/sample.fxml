<AnchorPane maxWidth="700.0" minWidth="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
       <Label layoutX="20.0" layoutY="35.0" prefWidth="300.0" text="Data Structure Visualizer">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <VBox layoutX="21.0" layoutY="71.0" prefHeight="132.0" prefWidth="300.0">
         <children>
            <Label prefHeight="17.0" prefWidth="300.0" text="1. Choose Data Structure / Algorithm">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
         
             <ComboBox fx:id="selector" prefWidth="300.0" promptText="Data Structure/ Algorithm">
                 <items>
                     <FXCollections fx:factory="observableArrayList">
                         <String fx:value="Data Structures" />
                         <String fx:value="Algorithms" />
                     </FXCollections>
                 </items>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
             </ComboBox>
         
             <ComboBox fx:id="dataStructure" disable="true" prefWidth="300.0" promptText="Choose a Data Structure / Algorithm">
                 <items>
                     <FXCollections fx:factory="observableArrayList">
                         <String fx:value="Binary Tree" />
                         <String fx:value="Stack" />
                         <String fx:value="Heap" />
                         <String fx:value="Graph" />
                         <String fx:value="Hash Table" />
                     </FXCollections>
                 </items>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
             </ComboBox>
         </children>
      </VBox>
      <VBox layoutX="21.0" layoutY="207.0" prefHeight="247.0" prefWidth="300.0">
         <children>
            <Label prefHeight="17.0" prefWidth="300.0" text="2. Initialize the Data Structure">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="48.0" prefWidth="300.0">
               <children>
                  <Label text="Option 1: " />
                   <Button fx:id="randomButton" disable="true" prefHeight="27.0" prefWidth="181.0" text="Generate Random Data">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets bottom="10.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <Label text="Option 2:">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="dataField" disable="true" prefHeight="198.0" prefWidth="300.0" promptText="Enter Data in Serialized Format">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextArea>
            <HBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
               
                   <Button fx:id="enterButton" disable="true" prefWidth="150" text="Enter" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="367.0" layoutY="72.0" prefHeight="91.0" prefWidth="300.0">
         <children>
            <Label text="3. Data Struture Display">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <Label prefHeight="17.0" prefWidth="305.0" text="Serialized Data">
               <padding>
                  <Insets bottom="5.0" />
               </padding>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         
         
             <AnchorPane fx:id="displayBoard" minHeight="200.0" minWidth="300.0" style="-fx-background-color: #5ff; -fx-border-color:black; -fx-border-width:1px 0px 1px 0px;">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </AnchorPane>
         </children>
      </VBox>
      <VBox layoutX="367.0" layoutY="339.0" prefHeight="119.0" prefWidth="300.0">
         <children>
            <Label prefHeight="17.0" prefWidth="308.0" text="4. Operate the Data Structure" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox fx:id="buttonVBox" prefHeight="100.0" prefWidth="120.0" />
                  <VBox fx:id="textFieldVBox" prefHeight="100.0" prefWidth="185.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>





</AnchorPane>
